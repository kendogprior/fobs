<% title "Image" %>

<p>
  <strong>Page:</strong>
  <%= @image.page_id %>
</p>
<p>
  <strong>Gallery:</strong>
  <%= @image.gallery_id %>
</p>
<p>
  <strong>Title:</strong>
  <%= @image.title %>
</p>
<p>
  <strong>Description:</strong>
  <%= @image.description %>
</p>
 <p>
  <strong>Image:</strong>
  <%= image_tag @image.photo.url(:thumb) unless !@image.photo_file_name %> 
</p>
<p>
  <%= link_to "Edit", edit_image_path(@image) %> |
  <%= link_to "Destroy", image_path(@image), :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", images_path %>
</p>
